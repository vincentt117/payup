<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cuhacking.payup.SelectActivity">

    <android.support.v7.widget.AppCompatEditText

        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/take_receipt_picture"
        android:id="@+id/client_username" />
    <Button
        android:id="@+id/take_receipt_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_receipt_picture"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="184dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="takePicture"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/view_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_bill"
        android:layout_marginTop="98dp"
        app:layout_constraintTop_toBottomOf="@+id/take_receipt_picture"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="viewBill"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintRight_toLeftOf="@+id/appCompatEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.158" />

    <Button
        android:id="@+id/set_name"
        android:layout_width="77dp"
        android:layout_height="49dp"
        android:text="OK"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/appCompatEditText"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="67dp"
        android:onClock="setName"/>

</android.support.constraint.ConstraintLayout>
