<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cuhacking.payup.SelectActivity">

    <Button
        android:id="@+id/take_receipt_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_receipt_picture"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="103dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="takePicture"/>

    <Button
        android:id="@+id/view_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_bill"
        android:layout_marginTop="98dp"
        app:layout_constraintTop_toBottomOf="@+id/take_receipt_picture"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="viewBill"/>

</android.support.constraint.ConstraintLayout>
